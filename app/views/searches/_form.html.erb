<%= form_for @search, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Search</legend>

    <div class="control-group">
      <%= f.label :query, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :query, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :last_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :last_id, :class => 'text_field' %>
      </div>
    </div>
    
      <div class="control-group">
      <%= f.label :category, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :category, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :featured_link_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :featured_link_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :active, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :active, :class => 'check_box' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', searches_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
