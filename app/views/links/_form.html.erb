<%= form_for @link, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Link</legend>

    <div class="control-group">
      <%= f.label :search_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :search_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :url, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :url, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :frequency, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :frequency, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :sources, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :sources, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', links_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
